apiVersion: continuity.amq.io/v2alpha2
kind: ActiveMQArtemisContinuity
metadata:
  name: ex-{{site_id}}-continuity
  namespace: {{continuity_project_name}}
spec:
  enableContinuity: true
  siteId: {{site_id}}
  activeOnStart: {{site_active}}
  peerSiteUrl: tcp://adsf:61360
  reorgManagement: true
  localContinuityPass: {{site_user}}
  localContinuityUser: {{site_pass}}
  remoteContinuityUser: {{peer_user}}
  remoteContinuityPass: {{peer_pass}}
  brokerIdCacheSize: 100000
  activationTimeout: 300000
  bridgeInterval: 1000
  bridgeIntervalMultiplier: 0.5
  inflowStagingDelay: 500
  inflowAcksConsumedPollDuration: 500
  outflowAcksConsumedPollDuration: 500
  outflowExhaustedPollDuration: 500
  continuityLogLevel: DEBUG
  
